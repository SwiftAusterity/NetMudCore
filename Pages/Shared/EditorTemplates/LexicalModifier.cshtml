@using NetMudCore.Data.Linguistic
@model Lexica

@{ 
    var title = string.IsNullOrWhiteSpace(Model.Phrase) ? "New" : string.Format("{0} : {1} : {2}", Model.Phrase, Model.Role, Model.Type);
}

<div class="accordionWrapper">
    <h5>@title</h5>
    <div>

        <div class="form-group row">
            <a href="#" class="removeRow col-form-label" title="Remove this" onclick="javascript: $(this).parent().parent().parent().remove(); return false;">X</a>
            @Html.EditorFor(m => m.Phrase)
            @Html.EditorFor(m => m.Role)
            @Html.EditorFor(m => m.Type)
            @Html.ValidationMessageFor(m => m, "", new { @class = "text-danger" })
        </div>
    </div>
</div>