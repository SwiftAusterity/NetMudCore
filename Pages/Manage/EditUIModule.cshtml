@model NetMudCore.Models.Admin.AddEditUIModuleViewModel

@{
    ViewBag.Breadcrumbs = new Tuple<string, string[], string[]>("Edit UI Module", new string[] { "Dashboard", "UIModules" }, new string[] { "/Manage", "/Manage/UIModules" });
}

<section id="newCharacterForm">
    @using (Html.BeginForm("EditUIModule", "Manage", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <input type="hidden" name="id" id="id" value="@Model.DataObject.Id" />
        <div class="form-group row">
            @Html.EditorFor(m => m.Name)
            @Html.EditorFor(m => m.Height)
            @Html.EditorFor(m => m.Width)
        </div>
        <div class="form-group row">
            @Html.EditorFor(m => m.BodyHtml)
        </div>
        <div class="form-group row">
            @Html.EditorFor(m => m.HelpText)
        </div>

        @Html.Partial("SubmitButton", new NetMudCore.Models.SubmitButtonModel() { SubmitName = "Save", CancelName = "Cancel", ReturnAction = "UIModules", ReturnController = "Manage", IncludeCancel = true })

    }
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}