@using NetMudCore.DataStructure.Combat

@model HashSet<IFightingArt>
@{
    var currentCount = Model.Count();
    var rowsName = ViewData.ModelMetadata.PropertyName + "Rows";
}
<div id="@rowsName" class="iterativeContainer">
    <div class="addRowContainer">
        <div>
            @Html.DescriptionFor(m => m)
            <a href="#" class="addRow btn" data-current-row="@currentCount" onclick="javascript: replacePart(this, newfartRow, @currentCount, '@rowsName'); return false;"><span class="addWord">Add</span></a>
        </div>
    </div>
    @if (currentCount > 0)
    {
        @Html.EditorForMany(m => m, null, 0, "FightingArtCollectionItem")
    }
</div>
<script type="text/javascript">
    var newfartRow = decodeHtml('@Html.EmptyEditorForMany(m => m, null, currentCount, "FightingArtCollectionItem")');
</script>