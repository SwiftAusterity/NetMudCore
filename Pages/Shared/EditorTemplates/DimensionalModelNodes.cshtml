@using NetMudCore.Data.Architectural.EntityBase
@using NetMudCore.DataStructure.Architectural.EntityBase
@using NetMudCore.Utility

@model HashSet<IDimensionalModelNode>

@{
    //if its blank we need 21 of them exactly
    if (Model.Count() == 0)
    {
        var i = 0;
        while (i < 21)
        {
            Model.Add(new DimensionalModelNode());
            i++;
        }
    }

    var nodeIterator = -1;
}

@foreach (var node in Model)
{
    var styleValue = (short)node.Style;
    nodeIterator++;

    <div class="dimModelNode" data-value="@styleValue">
        @Html.Hidden(string.Format("Style[{0}]", nodeIterator), styleValue)

        <span id="nodeValue" class="nodeValue">@node.Style.GetDescription().Substring(0, 1)</span>
    </div>
}
